{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Streamlit App",
            "type": "shell",
            "command": "${workspaceFolder}/Scripts/streamlit.exe",
            "args": ["run", "app.py"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run App (Fallback)",
            "type": "shell",
            "command": "python",
            "args": ["-m", "streamlit", "run", "app.py"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": false
            }
        }
    ]
}

